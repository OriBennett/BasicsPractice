<Page x:Class="DodgeGame.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DodgeGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game"
      Focusable="False">

    <Canvas x:Name="gameCanvas" KeyDown="gameCanvas_KeyDown" Focusable="True" Loaded="gameCanvas_Loaded">
        <TextBlock x:Name="gameText" Text="Game, Fun!" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36"/>
    </Canvas>
</Page>
